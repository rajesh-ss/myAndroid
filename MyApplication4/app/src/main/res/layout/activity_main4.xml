    <LinearLayout
        android:id="@+id/pdsd"
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="#F60404"
        android:layout_marginBottom="50px"
        android:orientation="vertical">

    </LinearLayout>

        <LinearLayout
            android:id="@+id/ph1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="50px"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hh"
                    android:layout_width="300px"
                    android:layout_height="500px"
                    android:src="@drawable/motoch"/>

                <LinearLayout
                    android:id="@+id/pps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:textSize="80px"
                    android:textColor="@color/cmtext"
                    android:letterSpacing="0.2"
                    android:text="MOTO"

                    />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="40px"
                        android:letterSpacing=".1"
                        android:textColor="@color/cmtext"

                        android:onClick="goToLifecycle"
                        android:text="Specs:\nprocessor: snapdragon
                                        \nram: 8gb
                                        \nrom: 128gb
                                        \n5G: yes"
                        />

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/sdsd"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="#F60404"
                android:layout_marginBottom="50px"
                android:orientation="vertical">

            </LinearLayout>

        <LinearLayout
            android:id="@+id/ph2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="300px"
                android:layout_height="500px"
                app:srcCompat="@drawable/iphonemaxpro" />


            <LinearLayout
                android:id="@+id/ppsss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:textSize="80px"
                    android:letterSpacing="0.2"
                    android:text="Apple"
                    android:textColor="#FFF"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="40px"

                    android:textColor="#FFF"
                    android:text="Specs:\nprocessor: A1 bionic
                                        \nram: 2gb
                                        \nrom: 128gb
                                        \n5G: yes"

                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



    <!-- </ScrollView> -->


</LinearLayout>

</ScrollView>