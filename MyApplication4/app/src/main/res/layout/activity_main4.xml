        android:layout_width="match_parent"
        android:layout_height="500px"

        android:layout_marginTop="30px">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/sskk"
                android:layout_width="fill_parent"
                android:background="#000"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




                <LinearLayout

                    android:layout_width="300px"
                    android:layout_height="400px"
                    android:baselineAligned="true"

                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="250px"
                        android:layout_height="250px"
                        android:layout_margin="30px"
                        android:scaleType="fitXY"

                        app:srcCompat="@drawable/snap" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70px"
                        android:text="Sandragon"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="60px" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="300px"
                    android:layout_height="400px"
                    android:baselineAligned="true"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="250px"
                        android:scaleType="fitXY"
                        android:layout_margin="30px"
                        android:layout_marginHorizontal="50px"
                        app:srcCompat="@drawable/mediaeig" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70px"
                        android:text="mediatek"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="60px" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="300px"
                    android:layout_height="400px"
                    android:baselineAligned="true"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="250px"
                        android:scaleType="fitXY"
                        android:layout_margin="30px"
                        android:layout_marginHorizontal="50px"
                        app:srcCompat="@drawable/exnos" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70px"
                        android:text="exnos"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="60px" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="300px"
                    android:layout_height="400px"
                    android:baselineAligned="true"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="250px"
                        android:layout_margin="30px"
                        app:srcCompat="@drawable/app"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70px"
                        android:text="A1 bionic"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="60px" />

                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

